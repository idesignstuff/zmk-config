#include <dt-bindings/zmk/matrix_transform.h>

/ {
	//chosen {
		//zmk,kscan = &kscan0;
		// zmk,matrix_transform = &default_transform;
	//};

	default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		columns = <10>;
		rows = <5>;
// | SW1  | SW2  | SW3  | SW4  | SW5  |                         | SW5  | SW4  | SW3  | SW2  | SW1  |
// | SW6  | SW7  | SW8  | SW9  | SW10 |                         | SW10 | SW9  | SW8  | SW7  | SW6  |
// | SW11 | SW12 | SW13 | SW14 | SW15 |                         | SW15 | SW14 | SW13 | SW12 | SW11 | 
// | SW16 | SW17 | SW18 | SW19 | SW20 | SW24 |           | SW24 | SW20 | SW19 | SW18 | SW17 | SW16 | 
// 			| SW21 | SW22 | SW23 |	         | SW23 | SW22 | SW21 | 
		map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)                    	RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9)  
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)                    	RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9)
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)             		RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9)
RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(4,4)    	RC(4,5)	RC(3,5) RC(3,6) RC(3,7) RC(3,8) RC(3,9)
                        RC(4,1) RC(4,2) RC(4,3)	   	RC(4,6)	RC(4,7) RC(4,8)
		>;
	};

	kscan0: kscan {
		compatible = "zmk,kscan-gpio-matrix";

		diode-direction = "col2row";
	col-gpios 
		= <&gpio0 6  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        	, <&gpio0 17 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        	, <&gpio0 22 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        	, <&gpio1 0  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        	, <&gpio1 4  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
		, <&gpio0 6  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        	, <&gpio0 31 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        	, <&gpio0 29 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        	, <&gpio1 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
                , <&gpio1 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        	;

	row-gpios
	    	= <&gpio0 8  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            	, <&gpio0 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            	, <&gpio0 24 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            	, <&gpio0 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            	, <&gpio1 6  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            	;
        };
	    left_encoder: encoder_left {
        	compatible = "alps,ec11";
        	a-gpios = <&gpio1 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        	b-gpios = <&gpio0 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        	steps = <20>;
          status = "disabled";
    	      };

		right_encoder: encoder_right {
        	compatible = "alps,ec11";
			a-gpios = <&gpio0 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
			b-gpios = <&gpio1 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
			steps = <20>;
     	status = "disabled";
             };

	sensors {
        	compatible = "zmk,keymap-sensors";
        	sensors = <&left_encoder &right_encoder>;
        	triggers-per-rotation = <20>;
    		};

};
